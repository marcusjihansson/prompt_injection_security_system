[flake8]
max-line-length = 100
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    build,
    dist,
    *.egg-info,
    threat_detector_optimized,
    .ruff_cache,
    .mypy_cache,
    .pytest_cache
max-complexity = 10
docstring-convention = google
per-file-ignores =
    __init__.py:F401,F403
    tests/*:D100,D101,D102,D103,D104
