# Example environment configuration for dspy.Trust Docker deployment
# Copy this to .env and customize as needed

# =============================================================================
# LLM Provider API Keys (Optional - for your application, not required by dspy.Trust)
# =============================================================================
# dspy.Trust runs locally with embedded models and doesn't need these.
# These are for YOUR application code that calls external LLMs.

# OpenAI (if your app uses it)
#OPENAI_API_KEY=sk-...

# Anthropic (if your app uses it)
#ANTHROPIC_API_KEY=sk-ant-...

# Cohere (if your app uses it)
#COHERE_API_KEY=...

# Other providers
#HUGGINGFACE_TOKEN=...

# =============================================================================
# Performance Configuration
# =============================================================================

# Number of threads for ONNX Runtime (default: 4)
# Increase for better throughput on multi-core systems
ONNX_NUM_THREADS=4

# OpenMP threads (default: 4)
OMP_NUM_THREADS=4

# Enable GPU support (requires nvidia-docker, default: false)
USE_GPU=false

# =============================================================================
# Feature Flags
# =============================================================================

# Use pre-optimized GEPA detector (recommended: true)
USE_OPTIMIZED_DETECTOR=true

# Enable regex baseline for fast pattern matching (recommended: true)
ENABLE_REGEX_BASELINE=true

# Path to specific GEPA program version (optional)
#DSPY_PROGRAM_PATH=/app/threat_detector_optimized/v2

# =============================================================================
# Caching Configuration
# =============================================================================

# LRU cache size (number of entries, default: 1024)
CACHE_SIZE=1024

# Semantic cache similarity threshold (0.0-1.0, default: 0.95)
SEMANTIC_CACHE_THRESHOLD=0.95

# =============================================================================
# Logging
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable structured logging
STRUCTURED_LOGGING=true

# =============================================================================
# Security (for production deployments)
# =============================================================================

# Enable API authentication (requires setup)
#ENABLE_AUTH=true
#JWT_SECRET_KEY=your-secret-key-here

# Enable rate limiting
#ENABLE_RATE_LIMIT=true
#RATE_LIMIT_PER_MINUTE=100

# Allowed origins for CORS (comma-separated)
#ALLOWED_ORIGINS=http://localhost:3000,https://yourapp.com
